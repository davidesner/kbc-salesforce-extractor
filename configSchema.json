{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Salesforce writer KBC configuration",
    "type": "object",
    "properties": {
        "loginname": {
            "title": "Login Name",
            "type": "string",
            "description": "Login name for Salesforce"
        },
        "#password": {
            "title": "Password",
            "type": "string",
            "description": "Salesforce password"
        },
      "#securitytoken": {
            "title": "Security token",
            "type": "string",
            "description": "Salesforce security token"
        },
   
   "sandbox": {
            "title": "Sandbox",
            "type": "boolean",
            "description": "True if you wish to update records in sandbox"
        }
    },
    "required": [
        "loginname", "#password", "#securitytoken", "object"
    ]
}

